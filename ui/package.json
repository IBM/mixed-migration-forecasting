{
  "name": "drc-s2-tdp",
  "version": "1.0.0",
  "description": "DRC Solution 2 - Total Displaced Persons",
  "main": "index.js",
  "engines": {
    "node": "12.13.0"
  },
  "scripts": {
    "start": "node server/server.js",
    "client-build": "cd client && npm run build",
    "dev": "cross-env NODE_ENV=dev concurrently \"nodemon server/server.js\" \"cd client && cross-env PORT=3006 npm run start\"",
    "dev-server": "nodemon server/server.js",
    "start-server": "node server/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.ibm.com:OpenHubTeam/DRC-S2-TDP.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.1",
    "body-parser": "^1.19.0",
    "cfenv": "^1.2.2",
    "compression": "^1.7.4",
    "connect": "^3.7.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "history": "^4.10.1",
    "i18n-iso-countries": "^4.3.1",
    "ibm-cloud-env": "^0.2.6",
    "ibmcloud-appid": "^6.3.1",
    "log4js": "^6.1.0",
    "mongodb": "^3.5.2",
    "mongoose": "^5.8.9",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{client,server}/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "client/"
    ],
    "watch": [
      "server/"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
